{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: clang++ build active file",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++17",
				"-stdlib=libc++",
				"-I./include",
				"-L./lib",
				"-lglfw3",
				"-lGLEW",
				"-framework", 
				"OpenGL",
				"-framework", 
				"IOKit",
				"-framework", 
				"Cocoa",
				"-g",
				"${file}",
				"-o",
				"build/Sandbox",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}