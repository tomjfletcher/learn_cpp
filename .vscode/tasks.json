{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: clang++ build active file",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++17",
				"-stdlib=libc++",

				//include src files
				"${workspaceRoot}/src/camera/controls.cpp",
				"${workspaceRoot}/src/scene/Scene.cpp",
				"${workspaceRoot}/src/setup/MainWindow.cpp",
				"${workspaceRoot}/src/shaders/shader.cpp",
				"${workspaceRoot}/src/shapes/Node.cpp",
				"${workspaceRoot}/src/shapes/TexturedNode.cpp",
				"${workspaceRoot}/src/shapes/test/CubeTest.cpp",
				"${workspaceRoot}/src/shapes/test/TexCubeTest.cpp",
				"${workspaceRoot}/src/textures/texture.cpp",

				//include shaders
				"${workspaceRoot}/src/shaders/standard.fs",
				"${workspaceRoot}/src/shaders/standard.vs",
				"${workspaceRoot}/src/shaders/simple.fs",
				"${workspaceRoot}/src/shaders/simple.vs",
				"${workspaceRoot}/src/shaders/texture.fs",
				"${workspaceRoot}/src/shaders/transform.vs",
				"${workspaceRoot}/src/textures/uvtemplate.DDS",

				"-I./include",
				"-L./lib",
				"-lglfw3",
				"-lGLEW",
				"-framework", 
				"OpenGL",
				"-framework", 
				"IOKit",
				"-framework", 
				"Cocoa",
				"-g",
				"${workspaceRoot}/src/setup/AppStart.cpp",
				"-o",
				"build/Sandbox",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}