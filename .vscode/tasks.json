{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: clang++ build active file",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++17",
				"-stdlib=libc++",

				//include src files
				"${workspaceFolder}/src/common/shader.cpp",
				"${workspaceFolder}/src/common/texture.cpp",
				"${workspaceFolder}/src/common/controls.cpp",
				"${workspaceFolder}/src/common/objloader.cpp",

				//include resources
				"${workspaceFolder}/src/tutorial02_red_triangle/SimpleFragmentShader.fragmentshader",
				"${workspaceFolder}/src/tutorial02_red_triangle/SimpleVertexShader.vertexshader",
				"${workspaceFolder}/src/tutorial07_model_loading/cube.obj",
				"${workspaceFolder}/src/tutorial07_model_loading/TextureFragmentShader.fragmentshader",
				"${workspaceFolder}/src/tutorial07_model_loading/TransformVertexShader.vertexshader",
				"${workspaceFolder}/src/tutorial07_model_loading/uvmap.DDS",

				"-I./include",
				"-L./lib",
				"-lglfw3",
				"-lGLEW",
				"-framework", 
				"OpenGL",
				"-framework", 
				"IOKit",
				"-framework", 
				"Cocoa",
				"-g",
				"${file}",
				"-o",
				"build/Sandbox",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}